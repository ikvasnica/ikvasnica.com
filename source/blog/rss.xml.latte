<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:atom="http://www.w3.org/2005/Atom"
>
    <channel>
        <title>{$siteAuthor} - Blog - {$siteName}</title>
        <link>{$siteUrl}/blog</link>
        <description>{$siteDescription}</description>
        <pubDate>{=date('r')}</pubDate>
        <atom:link href="{$siteUrl}/blog/rss.xml" rel="self" type="application/rss+xml" />

        {foreach $posts as $post}
            {first}
                <lastBuildDate>{$post->getDateInFormat('r')}</lastBuildDate>
            {/first}

        {continueIf $post->getDateInFormat('Y-m-d') > date('Y-m-d') || isset($post['redirect'])}

            <item>
                <title><![CDATA[ {$post['title']} ]]></title>
                <link>{$siteUrl}/blog/{$post['relativeUrl']}/</link>
                <guid isPermaLink="false">{$siteUrl}/blog/{$post['relativeUrl']}/</guid>
                <dc:creator><![CDATA[ {$siteAuthor} ]]></dc:creator>
                <pubDate>{$post->getDateInFormat('r')}</pubDate>
                <comments>{$siteUrl}/blog/{$post['relativeUrl']}#disqus_thread</comments>
            </item>
        {/foreach}
    </channel>
</rss>